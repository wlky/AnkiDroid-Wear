<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/pref_review_category__title">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/SoundOptions"
            android:entryValues="@array/SoundOptionsAlias"
            android:key="@string/play_sounds"
            android:summary="%s"
            android:title="@string/pref_play_sounds__title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/ask_before_first_sound"
            android:title="@string/pref_ask_before_play_sounds__title"
            />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/day_mode"
            android:title="@string/pref_day_mode__title"
            />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/alt_card_mode"
            android:title="@string/pref_alt_card_mode__title"
            />

        <com.yannik.anki.NumberPickerPreference
            android:id="@+id/font_size"
            android:defaultValue="40"
            android:key="@string/font_size_key"
            android:title="@string/pref_fontsize__title"
            app:minValue="1"
            app:summaryPostFix="@string/pref_card_fontsize__postfix" />

        <com.yannik.anki.NumberPickerPreference
            android:id="@+id/max_font_size"
            android:defaultValue="100"
            android:key="@string/max_font_size_key"
            android:title="@string/pref_max_fontsize__title"
            app:minValue="1"
            app:maxValue="200"
            app:summaryPostFix="@string/pref_card_fontsize__postfix" />

        <com.yannik.anki.NumberPickerPreference
            android:id="@+id/extra_padding"
            android:defaultValue="0"
            android:key="@string/extra_padding_key"
            android:title="@string/pref_extra_padding__title"
            app:maxValue="50"
            app:minValue="0"
            app:summaryPostFix="@string/pref_card_extra_padding__postfix" />

        <com.yannik.anki.NumberPickerPreference
            android:defaultValue="60"
            android:key="@string/screen_timeout"
            android:title="@string/pref_screen_timeout__title"
            app:maxValue="400"
            app:minValue="30"
            app:summaryPostFix="@string/pref_screen_timeout__postfix" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/double_tap_key"
            android:title="@string/pref_double_tap_key__title"
            />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/ambient_mode_key"
            android:summary="@string/pref_ambient_mode__summary"
            android:title="@string/pref_ambient_mode__title"
            />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/card_flip_animation_key"
            android:title="@string/pref_card_flip_animation__title"
            />

        <Preference
            android:key="@string/media_folder_location"
            android:title="@string/pref_media_folder_location__title"
            />


    </PreferenceCategory>

</PreferenceScreen>
